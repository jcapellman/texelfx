@model texelfx.mvc.Models.GenerationResponseModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <h1 class="mb-5">
            Scaler Results
        </h1>
    
        <div class="col-sm-12 text-center">
            <h4>Scaled using @Model.ScalerType</h4>

            <div class="OutputContainer">
                <h3>Original Image</h3>

                <br />

                <img alt="Original Image" src="data:image;base64,@System.Convert.ToBase64String(Model.OriginalBytes)" class="img-fluid text-center" width="@Model.Dimensions.width" height="@Model.Dimensions.height" />

                <br />

                <h3>Scaled Image</h3>

                <br />

                <img alt="Scaled Image" src="data:image;base64,@System.Convert.ToBase64String(Model.ResizedBytes)" width="@Model.ScaledDimensions.width" height="@Model.ScaledDimensions.height" />
            </div>

            <a href="/" role="button" class="btn btn-warning">home</a>
        </div>
    </div>
</div>